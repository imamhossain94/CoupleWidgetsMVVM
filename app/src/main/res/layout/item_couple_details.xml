<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <!--        <variable-->
        <!--            name="horse"-->
        <!--            type="org.hisausapps.lasix.model.horse.Horse" />-->

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:text="@string/couple_details"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/your_name"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"/>

                        <EditText
                            android:id="@+id/et_your_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_dark"
                            android:drawableStart="@drawable/ic_edit"
                            android:drawablePadding="15dp"
                            android:hint="@string/imam"
                            android:inputType="textVisiblePassword"
                            android:padding="15dp"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#D4D4D4"
                            android:autofillHints="name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/your_image"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_dark"
                            app:drawableStartCompat="@drawable/ic_picture"
                            android:drawablePadding="15dp"
                            android:text="@string/choose_image"
                            android:gravity="center|start"
                            android:padding="15dp"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#D4D4D4" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/partner_name"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_dark"
                            android:drawableStart="@drawable/ic_edit"
                            android:drawablePadding="15dp"
                            android:hint="@string/single"
                            android:inputType="textVisiblePassword"
                            android:padding="15dp"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#D4D4D4"
                            android:autofillHints="name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/partner_image"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_dark"
                            app:drawableStartCompat="@drawable/ic_picture"
                            android:drawablePadding="15dp"
                            android:text="@string/choose_image"
                            android:gravity="center|start"
                            android:padding="15dp"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#D4D4D4" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>