<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.newagedevs.couplewidgets.view.ui.MainViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:text="@string/widget_settings"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:maxLines="1"
                            android:text="Image Shape" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_light"
                            android:drawablePadding="15dp"
                            android:gravity="center|start"
                            android:onClick="@{viewModel.shapePicker}"
                            android:padding="15dp"
                            android:text="Select shape"
                            android:textColor="@color/black"
                            app:drawableStartCompat="@drawable/ic_circle"
                            android:scaleX="1"
                            android:scaleY="1"
                            app:drawableTint="@color/black"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:maxLines="1"
                            android:text="Shape Color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_light"
                            android:drawablePadding="15dp"
                            android:gravity="center|start"
                            android:onClick="@{viewModel.colorPicker}"
                            android:tag="shape_color"
                            android:padding="15dp"
                            android:text="#000000"
                            android:textColor="@color/black"
                            app:drawableStartCompat="@drawable/ic_brush"
                            app:drawableTint="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:maxLines="1"
                            android:text="Symbol Shape" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_light"
                            android:drawablePadding="15dp"
                            android:gravity="center|start"
                            android:onClick="@{viewModel.symbolPicker}"
                            android:padding="15dp"
                            android:text="Select shape"
                            android:textColor="@color/black"
                            app:drawableStartCompat="@drawable/symbol_1"
                            app:drawableTint="@color/black"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:maxLines="1"
                            android:text="Symbol Color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_light"
                            android:drawablePadding="15dp"
                            android:gravity="center|start"
                            android:padding="15dp"
                            android:onClick="@{viewModel.colorPicker}"
                            android:tag="symbol_color"
                            android:text="#000000"
                            android:textColor="@color/black"
                            app:drawableStartCompat="@drawable/ic_brush"
                            app:drawableTint="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:maxLines="1"
                            android:text="Name Color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_light"
                            android:drawablePadding="15dp"
                            android:gravity="center|start"
                            android:padding="15dp"
                            android:text="#000000"
                            android:onClick="@{viewModel.colorPicker}"
                            android:tag="name_color"
                            android:textColor="@color/black"
                            app:drawableStartCompat="@drawable/ic_brush"
                            app:drawableTint="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:maxLines="1"
                            android:text="Counter Color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_light"
                            android:drawablePadding="15dp"
                            android:gravity="center|start"
                            android:padding="15dp"
                            android:text="#000000"
                            android:onClick="@{viewModel.colorPicker}"
                            android:tag="counter_color"
                            android:textColor="@color/black"
                            app:drawableStartCompat="@drawable/ic_brush"
                            app:drawableTint="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>